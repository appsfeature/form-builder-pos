<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FormTheme.MaterialComponents.ActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FormTheme.MaterialComponents.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FormTheme.Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item>
    </style>

    <style name="FBDatePicker" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>


    <style name="FormTheme.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/form_builder_text_color</item>
        <item name="android:textColorHint">@color/form_builder_hint_color</item>
        <item name="android:textSize">@dimen/form_builder_text_size</item>
    </style>

    <style name="FormTheme.TextView.Title" parent="android:Widget.TextView">
        <item name="android:textColor">@color/form_builder_text_color</item>
        <item name="android:textSize">@dimen/form_builder_text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>