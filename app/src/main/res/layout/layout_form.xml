<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:expandedHintEnabled="true"
        android:hint="Campaign ID">

        <!--this is the actual edit text which takes the input-->
        <AutoCompleteTextView
            android:id="@+id/et_form_id"
            style="@style/FormTheme.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="55dp"
            android:padding="14dp"
            android:inputType="numberSigned"
            android:textColor="@color/themeTextColor"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:expandedHintEnabled="true"
        android:hint="Campaign Name">

        <!--this is the actual edit text which takes the input-->
        <AutoCompleteTextView
            android:id="@+id/et_form_name"
            style="@style/FormTheme.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="55dp"
            android:padding="14dp"
            android:inputType="text"
            android:textColor="@color/themeTextColor"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:expandedHintEnabled="true"
        android:hint="Title">

        <!--this is the actual edit text which takes the input-->
        <AutoCompleteTextView
            android:id="@+id/et_form_title"
            style="@style/FormTheme.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="55dp"
            android:padding="14dp"
            android:inputType="textPersonName"
            android:textColor="@color/themeTextColor"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:expandedHintEnabled="true"
        android:hint="Sub Title">

        <!--this is the actual edit text which takes the input-->
        <AutoCompleteTextView
            android:id="@+id/et_form_sub_title"
            style="@style/FormTheme.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="55dp"
            android:padding="14dp"
            android:inputType="textPersonName"
            android:textColor="@color/themeTextColor"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:expandedHintEnabled="true"
        android:hint="Button Text">

        <!--this is the actual edit text which takes the input-->
        <AutoCompleteTextView
            android:id="@+id/et_form_button"
            style="@style/FormTheme.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="55dp"
            android:padding="14dp"
            android:inputType="textPersonName"
            android:textColor="@color/themeTextColor"/>

    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>